pipeline {
    agent any

    environment {
        // Define the path to your .NET project's .csproj file
        PROJECT_PATH = 'C:\tmp\dotnet-app\Assessment.API\Assessment.API.csproj'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                script {
                    // Build the .NET project
                    bat "dotnet build ${env.PROJECT_PATH}"
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube servers') {
                    // Execute the SonarQube Scanner for MSBuild
                    bat "\"C:\\Program Files\\dotnet\\dotnet.exe\" \"C:\\sonar\\sonarqube\\bin\\sonar-scanner-msbuild\\SonarScanner.MSBuild.dll\" begin /k:\".net-code\""
                    bat "\"C:\\Program Files\\dotnet\\dotnet.exe\" build"
                    bat "\"C:\\Program Files\\dotnet\\dotnet.exe\" \"C:\\sonar\\sonarqube\\bin\\sonar-scanner-msbuild\\SonarScanner.MSBuild.dll\" end"
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline succeeded. You can add additional steps here for success.'
        }
        failure {
            echo 'Pipeline failed. You can handle failure gracefully here.'
        }
    }
}
