node {
  stage('SCM') {
    checkout scm
  }
  stage('SonarQube Analysis') {
    def scannerHome = "C:\\sonar\\sonarqube\\bin\\sonar-scanner-msbuild"
    def solutionFile = "C:\\tmp\\dotnet-app\\Assessment.API\\Assessment.API.sln"

    withSonarQubeEnv() {
      bat "\"C:\\Program Files\\dotnet\\dotnet.exe\" build \"${solutionFile}\""
      bat "\"C:\\Program Files\\dotnet\\dotnet.exe\" \"${scannerHome}\\SonarScanner.MSBuild.dll\" begin /k:\".net-code\""
      bat "\"C:\\Program Files\\dotnet\\dotnet.exe\" \"${scannerHome}\\SonarScanner.MSBuild.dll\" end"
    }
  }
}
