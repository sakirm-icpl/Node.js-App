pipeline {
    agent any

    environment {
        PATH = "${tool 'SonarScanner.MSBuild'}\\bin" // Update this path accordingly
    }

    stages {
        stage('SonarQube Analysis') {
            steps {
                script {
                    def scannerHome = tool name: 'SonarScanner.MSBuild', type: 'SonarScanner.MSBuild'
                    bat "\"${scannerHome}\\SonarScanner.MSBuild.exe\" begin /k:\".net-code\""
                    bat "\"${scannerHome}\\SonarScanner.MSBuild.exe\" end"
                }
            }
        }
    }
}
